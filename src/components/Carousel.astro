---
import { Swiper, SwiperWrapper, SwiperButtonPrev, SwiperButtonNext } from "astro-swiper";
import type { AstroSwiperType } from "astro-swiper";
import CarouselItem from "./CarouselItem.astro";

const astroSwiperOptions: AstroSwiperType = {
  options: {
    loop: true,
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    slidesPerView:"auto",
  },
};

const {title} = Astro.props;
---
<div class="flex flex-col m-10 gap-6">
  <h1 class="text-white">{title}</h1>
  <div class="flex flex-col relative w-180">
    <div>
      <Swiper options={astroSwiperOptions.options} >
        <SwiperWrapper >
          <slot/>
        </SwiperWrapper>
        <SwiperButtonPrev />
        <SwiperButtonNext />
      </Swiper>
    </div>
    <div class="background-pattern-points-red absolute top-[-20px] left-[-10px] w-40 h-30 rounded-sm"/>
    <div class="background-pattern-points-red absolute bottom-[-20px] right-[-10px] w-40 h-30 rounded-sm"/>
  </div>
</div>

<style>
  .swiper {
    max-width: 700px;
    aspect-ratio: 16/9;
    border-radius: 10px;
  }

  img {
    width: 100%;
  }
  .swiper-button-next,
.swiper-button-prev {
    right:10px;
    padding: 30px;
    color: white;
}




</style>