<style>
    .hover-underline {
    position: relative;
    display: inline-block;
    }

    .hover-underline::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    background: linear-gradient(to left, var(--color-red-500), var(--color-red-900));
    top: 30px;
    left: 0;
    transform: scaleX(0);
    transition: transform 0.2s ease-out;
    }

    .hover-underline:hover::after {
    transform: scaleX(1);
    }
</style>


