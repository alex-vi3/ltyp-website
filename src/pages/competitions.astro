                </div>
                <div class="flex gap-40">
                    <CompetitionTeam number={3}  division="Départemental 3" composition={["A déterminer"]}/>
                    <CompetitionTeam number={4} division="Départemental 4" composition={["A déterminer"]}/>
                </div>
                <div class="flex gap-40">
                    <CompetitionTeam number={5}  division="Départemental 4" composition={["A déterminer"]}/>
                    <CompetitionTeam number={6} srcImage={imageEquipeFem.src} division="Féminines" composition={["A déterminer"]}/>
                </div>
               
            </div>
            </div>
